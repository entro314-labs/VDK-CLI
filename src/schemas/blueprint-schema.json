        },
        "rubyVersion": {
          "type": "string",
          "description": "Ruby version"
        },
        "rails": {
          "type": "boolean",
          "description": "Rails support?"
        },
        "inspections": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Ruby inspections"
        },
        "mcpIntegration": {
          "type": "boolean",
          "description": "Uses MCP servers?"
        }
