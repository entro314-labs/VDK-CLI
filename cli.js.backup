      statusTable.push([
        'VDK Configuration',
        status.success('Found'),
        `${format.keyValue('Project', config.project.name)}\n${format.keyValue('IDE', config.ide)}`,
      ])
      
      // Check for existing AI contexts that could be migrated
      try {
