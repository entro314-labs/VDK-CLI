{
  "name": "@vibe-dev-kit/cli",
  "version": "2.0.0",
  "type": "module",
  "description": "Advanced Command-line toolkit that analyzes your codebase and deploys project-aware rules, memories, commands and agents to any AI coding assistant - VDK is the world's first Vibe Development Kit",
  "main": "cli.js",
  "bin": {
    "vdk": "./cli.js"
  },
  "files": [
    "cli.js",
    "src/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "validate": "node src/validation/validate-rules.js",
    "check-duplicates": "node src/validation/check-duplicates.js",
    "health-check": "node src/utils/health-check.js",
    "update-mcp-config": "node src/utils/update-mcp-config.js",
    "insights": "node src/utils/project-insights.js",
    "lint": "eslint .",
    "test": "node tests/new-scanner-core.test.js && node tests/new-security.test.js && node tests/new-cli.test.js",
    "test:scanner": "node tests/new-scanner-core.test.js",
    "test:security": "node tests/new-security.test.js",
    "test:cli": "node tests/new-cli.test.js",
    "test:legacy": "node test/basic-functionality.test.js",
    "build": "echo 'No build step required'",
    "prepublishOnly": "npm run validate"
  },
  "keywords": [
    "ai-assistant",
    "developer-tools",
    "cli",
    "vibe-coding",
    "context-aware",
    "vdk"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/entro314-labs/VDK-CLI.git"
  },
  "author": "Dominikos Pritis",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "acorn": "^8.15.0",
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "glob-to-regexp": "^0.4.1",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "jscodeshift": "^17.3.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
